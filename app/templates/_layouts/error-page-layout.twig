{# Error page layout
{# ================================================================ #}
{% extends "_layouts/site-layout.twig" %}

{% set entry = craft.entries.section('errorPages').slug(slug).one() %}

{% block content %}
  {% embed "_embeds/base-section.twig" with {
    sectionColorTheme: 'light',
    sectionSpacing: 'sm',
  } %}
    {% block wrapper %}
      <h1 class="type-h1">
        {{- entry.pageTitle -}}
      </h1>
      <div class="rich-text text-xl">
        {{- entry.richText -}}
      </div>
    {% endblock %}
  {% endembed %}
{% endblock %}
