{# ================================================================ #}
{# Layout template for all HTML pages in the Default site
{# ================================================================ #}
{% extends "_base/base-html-layout.twig" %}

{# -- Any `<link>` tags in the `<head>` -- #}
{% block headLinks %}
  <link rel="stylesheet" href="{{ rev('styles/site.css') }}">
{% endblock headLinks %}

{# -- Site header -- #}
{% block siteHeader %}
  {% include "_partials/site-header.twig" %}
{% endblock siteHeader %}

{# -- Site footer -- #}
{% block siteFooter %}
  {% include "_partials/site-footer.twig" %}
{% endblock siteFooter %}

{# -- Any JS at the end of the `<body>` -- #}
{% block bodyJs %}
  <script type="module" src="{{ rev('scripts/site.js') }}"></script>
{% endblock bodyJs %}
